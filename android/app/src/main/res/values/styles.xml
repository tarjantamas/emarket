<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/grey</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseButton" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:layout_marginLeft">@dimen/button_margin_adjust</item>
        <item name="android:layout_marginRight">@dimen/button_margin_adjust</item>
        <item name="android:layout_marginTop">@dimen/button_margin_adjust</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_adjust</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="PrimaryButton" parent="BaseButton">
        <item name="android:background">@color/green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GreenStrokeButton" parent="BaseButton">
        <item name="android:textColor">@color/black</item>
        <item name="strokeColor">@color/green</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="WhiteStrokeButton" parent="GreenStrokeButton">
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="FormInput" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:ellipsize">start</item>
        <item name="android:inputType">text</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="FormLabel" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="ContentLabel" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/green</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
