<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".auth.SignUpFragment" android:background="@color/lightGrey">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/title"
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:textSize="45sp"
                android:textColor="@color/green"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="70dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="76dp"
                app:layout_constraintTop_toBottomOf="@+id/title" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="20dp" android:id="@+id/inputLayout"
                app:layout_constraintHorizontal_bias="0.439" android:layout_marginEnd="20dp">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/emailField"
                    android:hint="@string/email_address"
                    android:importantForAutofill="no"
                    android:background="@color/white"
                    android:padding="@dimen/text_padding"
                    android:gravity="center_horizontal"
                    android:ellipsize="start"/>
            <Space android:layout_width="1dp" android:layout_height="@dimen/vertical_spacer"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/passwordField"
                    android:hint="@string/password"
                    android:importantForAutofill="no"
                    android:background="@color/white"
                    android:padding="@dimen/text_padding"
                    android:gravity="center_horizontal"
                    android:ellipsize="start"/>
            <Space android:layout_width="1dp" android:layout_height="@dimen/vertical_spacer"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/firstNameField"
                    android:hint="@string/first_name"
                    android:importantForAutofill="no"
                    android:background="@color/white"
                    android:padding="@dimen/text_padding"
                    android:gravity="center_horizontal"
                    android:ellipsize="start"/>
            <Space android:layout_width="1dp" android:layout_height="@dimen/vertical_spacer"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/lastNameField"
                    android:hint="@string/last_name"
                    android:importantForAutofill="no"
                    android:background="@color/white"
                    android:padding="@dimen/text_padding"
                    android:gravity="center_horizontal"
                    android:ellipsize="start"/>
            <Space android:layout_width="1dp" android:layout_height="@dimen/vertical_spacer"/>
            <Button
                    android:id="@+id/signUpButton"
                    android:text="@string/sign_up"
                    style="@style/PrimaryButton"/>
            <com.google.android.material.button.MaterialButton
                    android:id="@+id/skipRegistrationButton"
                    android:text="@string/skip_sign_up"
                    style="@style/WhiteStrokeButton"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
