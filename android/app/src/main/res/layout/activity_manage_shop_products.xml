<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@color/lightGrey"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/actionsLayout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp">
            <Button
                    android:id="@+id/confirmButton"
                    android:text="@string/confirm"
                    style="@style/PrimaryButton"/>
            <com.google.android.material.button.MaterialButton
                    android:id="@+id/addNewProductButton"
                    android:text="@string/add_new_product"
                    style="@style/GreenStrokeButton"/>
            <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancelButton"
                    android:text="@string/cancel"
                    style="@style/WhiteStrokeButton"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/shopLayout"
                app:layout_constraintTop_toBottomOf="@id/actionsLayout"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
            <TextView
                    android:text="@string/products_in_shop"
                    style="@style/FormLabel"/>
            <ListView android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:id="@+id/shopProducts"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/companyLayout"
                app:layout_constraintTop_toBottomOf="@+id/shopLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
            <TextView
                    android:text="@string/products_in_company"
                    style="@style/FormLabel"/>
            <ListView android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:id="@+id/companyProducts"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
